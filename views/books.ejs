<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Books</h1>
            <a href="/books/new" class="btn btn-primary">Add New Book</a>
            <a href="/books/new">Add New Book</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.id %></td>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.genre %></td>
                        <td>
                            <a href="/books/<%= book.id %>" class="btn btn-edit">Edit</a> |
                            <a href="/books/<%= book.id %>/delete" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>