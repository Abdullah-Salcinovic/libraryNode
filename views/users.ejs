<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Users</h1>
            <a href="/users/new" class="btn btn-primary">Add New User</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.role %></td>
                        <td>
                            <a href="/users/<%= user.id %>" class="btn btn-edit">Edit</a> |
                            <a href="/users/<%= user.id %>/delete" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    </div>
</body>
</html>